<form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet article?');">Delete</button>
</form>