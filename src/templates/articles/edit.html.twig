{% extends 'base.html.twig' %}

{% block title %}Modifier un Article{% endblock %}

{% block body %}
    <h1>Modifier un Article</h1>

    {% if error is defined %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% endif %}

    {{ form_start(form, {'attr': {'id': 'edit-article-form'}}) }}
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.nom) }}
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.prix) }}
            </div>
        </div>
        
        <div class="form-group">
            {{ form_label(form.category) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">
                {{ form_errors(form.category) }}
            </div>
        </div>
        
        {% if form.save is defined %}
            <div class="form-group">
                {{ form_widget(form.save, {'attr': {'value': 'Modifier'}}) }}
            </div>
        {% else %}
            <button type="submit" class="btn btn-success">Modifier</button>
        {% endif %}
    {{ form_end(form) }}
    
    <a href="{{ path('app_article_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
{% endblock %}